<%- include ('../layouts/header.ejs') -%>
    <div class="content">
        <h2>إدارة الاعلانات</h2>
        <div class="container">
            <div class="row">
                <div class="tag col-xs-12 col-md-6">
                    <h4>google tag</h4>
                    <form method="post" action="/google/edit-tag"><textarea class="form-control" name="tag"><%=data.tag%></textarea> <button type="submit" class="btn btn-dark">submit</button></form>
                </div>
                <div class="new-add col-xs-12 col-md-6">
                    <h4>اضافة اعلان جديد</h4>
                    <form method="post" action="/google/add-new-add"><textarea class="form-control" name="add"></textarea> <button type="submit" class="btn btn-dark">submit</button></form>
                </div>
            </div>
            <h4>الاعلانات</h4>
            <%data.adds.forEach(add =>{ %>
                <div class="row">
                    <div class="col-xs-4">
                        <p class="lead" style="max-width: 750px; overflow: scroll;">
                            <%=add.code%>
                        </p>
                    </div>
                    <div class="col-xs-2">
                        <form action="/google/remove-add/<%=add._id%>" method="get"><button class="btn btn-danger">حذف</button></form>
                    </div>
                </div>
                <%})%>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>

    </html>