<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="main/output.css" rel="stylesheet">
</head>

<body>
    <header class="bg-gray-100 shadow-md">
        <div class="container mx-auto flex items-center text-blue-500 justify-around">
            <!-- Logo -->
            <div class="h-24 w-24">
                <img src="images/logo.jpg" alt="" srcset="">
            </div>

            <!-- Nav Links -->
            <nav class="hidden md:flex space-x-6 rtl:space-x-reverse">
                <a href="#" class="text-blue-900 hover:text-blue-500">تواصل معنا</a>
                <a href="#" class=" text-blue-900 hover:text-blue-500">من نحن</a>
                <a href="#" class=" text-blue-900 hover:text-blue-500">شركاء النجاح</a>
                <a href="#" class=" text-blue-900 hover:text-blue-500">منتجاتنا</a>
                <a href="#" class=" text-blue-900 hover:text-blue-500">خدماتنا</a>
                <a href="#" class=" text-blue-900 hover:text-blue-500">عروضنا</a>
                <a href="#" class="text-blue-900 hover:text-blue-500">الرئيسية</a>
            </nav>

            <!-- Search Bar -->
            <div class="relative flex items-center">
                <input type="text" placeholder="بحث"
                    class="w-48 px-3 py-1 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-400">
            </div>
            <div>
                <h2 class="text-blue-900 font-bold text-2xl text-center">مؤسسة عالية الدقة للتجارة</h2>
                <h2 class="text-blue-400 font-semibold text-lg text-center">أجهزة امنية-المنزل الذكى</h2>
            </div>
        </div>
    </header>
    <section class="w-full   h-[50rem] bg-cover bg-center" style="background-image: url('images/hero.jpg');">
    </section>
    <main class="flex flex-col items-center justify-center">
        <section class="text-center py-10">
            <div
                class="mx-auto relative mb-5 w-40 h-14 flex justify-start items-center bg-teal-500 text-white px-4 py-2 rounded-l-md rounded-r-md">
                <span class="text-2xl ml-2  font-bold">عروضنا</span>
                <div
                    class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec1.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <div class="flex w-full flex-wrap gap-1 justify-evenly">
                <% offers.forEach(o=>{ %>
                    <img class="w-1/5 mb-7 h-36 object-cover" src="<%=o.img.replace('/public', '' )%>" alt="Random" />
                    <%})%>
            </div>
        </section>


        <section class="bg-white w-full py-10 text-center">
            <div
                class="mx-auto relative mb-5 w-40 h-14 flex justify-start items-center bg-teal-500 text-white px-4 py-2 rounded-l-md rounded-r-md">
                <span class="text-2xl ml-2  font-bold">خدماتنا</span>
                <div
                    class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec2.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <div class="flex ml-56 items-center flex-wrap justify-evenly">
                <%servs.forEach(s=>{ %>
                    <div class="flex w-1/3 items-center">
                        <span class="text-lg font-bold text-blue-900">
                            <%=s.serv%>
                        </span>
                        <div
                            class="border-4 border-white   w-12 h-12 flex items-center justify-center bg-white rounded-full overflow-hidden">
                            <img src="<%=s.img%>" alt="Offer Icon" class="w-12 h-12" />
                        </div>
                    </div>
                    <%})%>
            </div>
        </section>

        <section class="mx-auto w-full py-10 text-center">
            <div
                class="mx-auto relative mb-5 w-40 h-14 flex justify-start items-center bg-teal-500 text-white px-4 py-2 rounded-l-md rounded-r-md">
                <span class="text-2xl ml-2  font-bold">منتجاتنا</span>
                <div
                    class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec3.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <div class="flex justify-center flex-col items-center">
                <%prods.forEach(p=>{ %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 p-6 w-full max-w-5xl">
                        <%p.forEach(s=>{%>
                            <div class="border-2 rounded-md border-blue-300 flex justify-around flex-col">
                                <img src="<%=s.img%>" alt="" srcset="" class="m-2">
                                <div class="text-blue-900 font-bold my-2">
                                    <%=s.name%>
                                </div>
                                <div class="text-blue-900 font-medium my-2">
                                    <%=s.desc%>
                                </div>
                            </div>
                            <%})%>
                    </div>
                    <%})%>

            </div>
        </section>

        <section class="bg-white w-full py-10 text-center">
            <div
                class="mx-auto relative mb-5 w-40 h-14 flex justify-start items-center bg-teal-500 text-white px-4 py-2 rounded-l-md rounded-r-md">
                <span class="text-2xl ml-2  font-bold">من نحن</span>
                <div
                    class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec3.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <p class="text-blue-900 text-4xl mx-5">مؤسسة رائدة فى مجال تقديم خدمات أنظمة تقنية المعلومات والحلول الرقمية
                فى
                المملكة وبالتعاون مع كبرى
                الشركات العالمية بتقديم أرقى مستويات الخدمات بتقديم الحلول والأنطمة التقنية</p>
        </section>
        <section class="bg-white w-full py-10 text-center">
            <div
                class="mx-auto relative mb-5 w-52 h-14 flex justify-start items-center bg-teal-500 text-white px-4 py-2 rounded-l-md rounded-r-md">
                <span class="text-2xl ml-2  font-bold">شركاء النجاح</span>
                <div
                    class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec3.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <div class="flex justify-center flex-col items-center">

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 p-6 w-full max-w-5xl">
                    <div class="border-2 rounded-md border-blue-300 flex justify-around flex-col">
                        <img src="images/sec1.jpg" alt="" srcset="" class="m-2">
                    </div>
                    <div class="border-2 rounded-md border-blue-300 flex justify-around flex-col">
                        <img src="images/sec1.jpg" alt="" srcset="" class="m-2">

                    </div>
                    <div class="border-2 rounded-md border-blue-300 flex justify-around flex-col">
                        <img src="images/sec1.jpg" alt="" srcset="" class="m-2">

                    </div>
                    <div class="border-2 rounded-md border-blue-300 flex justify-around flex-col">
                        <img src="images/sec1.jpg" alt="" srcset="" class="m-2">

                    </div>
                </div>
            </div>
        </section>

        <section class="w-full  h-96 bg-cover bg-center" style="background-image: url('images/footer.jpg');">
            <div class="flex flex-col">
                <div class="flex items-center justify-around">
                    <img src="images/logo.jpg" alt="" srcset="" class="w-40 h-40">
                    <div class="flex flex- col">
                        <p>الرياض -طريق الملك-عبدالعزيز ص.ب 13325</p>
                        <img src="" alt="" srcset="">
                    </div>
                    <div class="flex">
                        <div>تواصل معنا:</div>
                        <div><img src="" alt=""> <span></span></div>
                    </div>
                </div>
                <div class="flex justify-center items-center gap-12">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">
                    <img src="images/logo.jpg" alt="" class="w-16 h-16">

                </div>
            </div>
        </section>
        <section class="w-full    bg-blue-900 bg-center flex justify-center items-center">
            <div class="mt-5">
                <h1 class="text-4xl   h-16 font-medium text-white"> copyright <span class="text-blue-300">hr-est</span>
                    All
                    Rights
                    Reserverd</h1>
            </div>

        </section>

    </main>

</body>

</html>