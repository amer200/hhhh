                <div class="border-4 border-white right-[-14px] absolute w-16 h-16 flex items-center justify-center bg-white rounded-full overflow-hidden">
                    <img src="images/sec1.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>
            <div class="flex flex-wrap gap-4 justify-center">
                <% offers.forEach(o => { %>
                    <!-- رابط واتساب مع hover effect -->
