                            class="buy mb-7 object-contain" 
                            style="max-width: 300px; transition: transform 0.3s ease-in-out;" 
                            src="<%= o.img.replace('/public', '') %>" 
                            alt="Offer Image" 
                            class="hover:cursor-pointer"
                        />
                    </a>
                    <% }) %>
            </div>
        </section>
        <section id="sec3" class="bg-white w-full py-10 text-center">
