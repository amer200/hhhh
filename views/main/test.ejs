                    <img src="images/sec2.jpg" alt="Offer Icon" class="w-16 h-16" />
                </div>
            </div>

            <!-- Grid Layout for 3 Columns (Row 1) -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 px-4">
                <% servs.forEach(service=> { %>
                    <div class="flex items-center justify-center gap-2">
                        <span class="text-lg font-bold text-blue-900">
                            <%= service.serv %>
                        </span>
                        <div class="border-4 border-white flex items-center justify-center bg-white rounded-full overflow-hidden w-16 h-16">
                            <img src="<%=service.img.replace('/public', '' )%>" alt="Service Icon" />
