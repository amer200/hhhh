                                        src="<%= s.img.replace('public', '') %>" 
                                        alt="" 
                                        class="m-2 hover:cursor-pointer" 
                                        style="transition: transform 0.3s ease-in-out;">
                                </a>
                                <div class="text-blue-900 font-bold my-2">
                                    <%= s.name %>
                                </div>
                                <div class="text-blue-900 font-medium my-2">
                                    <%= s.desc %>
                                </div>
                            </div>
                            <% }) %>
